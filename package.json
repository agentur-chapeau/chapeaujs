{
  "name": "chapeaujs",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "source": "src/index.js",
  "chapeau": "dist/chapeau.js",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "vite": "vite build",
    "dev": "parcel --dist-dir .dev-dist/",
    "build": "rm -rf dist/ && parcel build --no-optimize --no-source-maps",
    "cache:clear": "rm -rf .dev-dist/ && rm -rf .parcel-cache/",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@parcel/optimizer-data-url": "^2.12.0",
    "@parcel/transformer-inline-string": "^2.12.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.24",
    "parcel": "^2.12.0",
    "vite": "^5.4.6"
  },
  "dependencies": {
    "filepond": "^4.30.6",
    "filepond-plugin-file-validate-size": "^2.2.8",
    "filepond-plugin-file-validate-type": "^1.2.9",
    "lodash-es": "^4.17.21",
    "style-inject": "^0.3.0"
  },
  "targets": {
    "chapeau": {
      "context": "browser",
      "outputFormat": "global"
    }
  }
}
